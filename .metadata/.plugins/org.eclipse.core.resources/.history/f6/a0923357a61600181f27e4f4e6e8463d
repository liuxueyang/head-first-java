import java.util.ArrayList;

public class DotComBust {
	ArrayList<DotCom> dotComs = new ArrayList<DotCom>();
	
	private ArraList<DotCom> dotComList = new ArrayList<DotCom>();
	private int numOfGuesses = 0;
	private GameHelper helper = new GameHelper();

	public static void main(String[] args) {
		DotComBust dcb = new DotComBust();
		
		for (int i = 0; i < 3; ++i) {
			DotCom a = new DotCom();
			a.setComName("com" + i);
			dcb.dotComs.add(a);
		}
		
		GameHelper gh = new GameHelper();
		
		gh.setLocations(dcb.dotComs);
		int score = 0;
		
		while (!dcb.dotComs.isEmpty()) {
			String guess = gh.getUserInput("Input Location");
			score++;
			
			String result = "";
			
			for (DotCom x : dcb.dotComs) {
				result = x.checkYourself(guess);
				
				if (result.equals("kill")) {
					dcb.dotComs.remove(x);
					break;
				}
				
				if (result.equals("hit")) {
					break;
				}
			}
		}
		
		System.out.println("Your score is " + score);
	}
	
	
}
